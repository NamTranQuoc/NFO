<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/nameProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/image"
            android:lines="3"
            android:text="gggggggggggggggggggggggggggggggggggggggggggggggggggggggggggiiiiiiiiiiiiiiiiiiiiiiiioooooooog"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/lb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameProduct"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="17dp"
            android:layout_toRightOf="@+id/image"
            android:lines="1"
            android:text="Giá: "
            android:textColor="#EC3131" />

        <TextView
            android:id="@+id/lbPriceIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/lb1"
            android:layout_marginTop="17dp"
            android:layout_below="@+id/nameProduct"
            android:text="₫"
            android:layout_marginLeft="5dp"
            android:textColor="#EC3131"/>

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameProduct"
            android:layout_marginTop="17dp"
            android:layout_toRightOf="@+id/lbPriceIcon"
            android:lines="1"
            android:text="100.100"
            android:textColor="#EC3131"/>

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameProduct"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:text="Xóa"
            android:textColor="@color/white"
            android:backgroundTint="@color/background" />


    </RelativeLayout>
</FrameLayout>